<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/view_logo_password"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/teal_700"/>

        <TextView
            android:id="@+id/view_url_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="google.com"
            android:layout_toEndOf="@id/view_logo_password"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/view_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_url_title"
            android:layout_toEndOf="@id/view_logo_password"
            android:layout_marginStart="15dp"
            android:text="georgyfilatov@yandex.ru"/>

        <ImageView
            android:id="@+id/view_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_outline_content_copy_24" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>