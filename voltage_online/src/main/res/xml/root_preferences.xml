<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/title_passwords">

        <EditTextPreference
            app:key="user_email"
            app:title="@string/default_login"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory android:title="@string/generator_passwords">

        <ListPreference
            android:defaultValue="32"
            android:entries="@array/length_password"
            android:entryValues="@array/length_password_data"
            android:key="generator_passwords_length"
            android:title="@string/max_length_password" />
    </PreferenceCategory>

</PreferenceScreen>